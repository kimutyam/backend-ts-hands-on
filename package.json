{
  "name": "backend-ts-hands-on",
  "version": "1.0.0",
  "description": "バックエンドTypeScriptのハンズオン",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/book",
      "packages/fp",
      "packages/fp-zod",
      "packages/pure",
      "packages/conference-service",
      "packages/full_sample"
    ],
    "nohoist": [
      "**/prisma",
      "**/@prisma/client",
      "**/@nestjs/common"
    ]
  },
  "devDependencies": {
    "@types/node": "20.12.8",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "better-typescript-lib": "2.7.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
