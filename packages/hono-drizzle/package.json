{
  "name": "hono-drizzle",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --build tsconfig.json",
    "format": "prettier --check \"{src,test}/**/*.ts\"",
    "format:fix": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "eslint --cache \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint --cache \"{src,test}/**/*.ts\" --fix",
    "prebuild:drizzle-kit": "rimraf dist-drizzle-kit",
    "build:drizzle-kit": "tsc -p tsconfig.drizzle-kit.json",
    "db:generate": "pnpm run build:drizzle-kit && drizzle-kit generate",
    "db:migrate": "pnpm run build:drizzle-kit && dotenv -e .env.local -- drizzle-kit migrate",
    "db:push": "pnpm run build:drizzle-kit && dotenv -e .env.local -- drizzle-kit push",
    "start:managenet:local": "node --env-file=.env.local dist/entryPoint/primary/management/web/main.js",
    "start:shopping:local": "node --env-file=.env.local dist/entryPoint/primary/shopping/web/main.js",
    "test": "dotenv -e .env.test -- vitest --typecheck",
    "test:cov": "dotenv -e .env.test -- vitest --coverage",
    "test:db": "dotenv -e .env.test.db -- vitest --no-file-parallelism",
    "test:db:migrate": "pnpm run build:drizzle-kit && dotenv -e .env.test.db -- drizzle-kit migrate",
    "test:db:push": "pnpm run build:drizzle-kit && dotenv -e .env.test.db -- drizzle-kit push"
  },
  "dependencies": {
    "@hono/node-server": "1.19.9",
    "@hono/zod-openapi": "1.2.0",
    "@scalar/hono-api-reference": "0.9.35",
    "date-fns": "4.1.0",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.45.1",
    "hono": "4.11.4",
    "neverthrow": "8.2.0",
    "pg": "8.17.1",
    "remeda": "2.33.3",
    "typed-inject": "5.0.0",
    "ulidx": "2.4.1",
    "yargs": "18.0.0",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "4.4.1",
    "@types/node": "22.19.7",
    "@types/pg": "8.16.0",
    "@types/yargs": "^17.0.35",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "0.31.8",
    "eslint-plugin-neverthrow": "1.1.4",
    "eslint-plugin-no-relative-import-paths": "1.6.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "rimraf": "6.1.2",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "6.0.4",
    "vitest": "3.2.4"
  }
}
